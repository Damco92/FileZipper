@using FileArchiver.Common.ViewModels
@model RegisterNewUserViewModel

<form action="/" method="post" class="mt-4 text-center pb-4" id="registerUserForm">
    <div class="container mt-4 mb-4">
        <div class="form-group mt-4">
            @Html.LabelFor(x => x.Username, "Insert username", new { @class = "text-left mr-3" })
            @Html.TextBoxFor(x => x.Username)
        </div>
        <div class="form-group mt-4 col-md-12">
            @Html.LabelFor(x => x.FullName, "Insert name", new { @class = "text-left mr-4" })
            @Html.TextBoxFor(x => x.FullName)
        </div>
        <div class="form-group mt-4 col-md-12">
            @Html.LabelFor(x => x.ZipPassword, "Insert password", new { @class = "text-left mr-3" })
            @Html.PasswordFor(x => x.ZipPassword)
        </div>
        <div class="form-group mt-4">
            <div class="col-md-12 text-center">
                <button type="submit" class="btn btn-success  mt-4" asp-action="RegisterUser" asp-controller="Home" id="registerBtn">Register new user</button>
            </div>
        </div>
    </div>
</form>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            @if(ViewBag.ErrorMessage != string.Empty)
            {
                <h3 class="text-danger text-center">@ViewBag.ErrorMessage</h3>
            }
        </div>
    </div>
</div>

@section scripts {
<script>
    let isAdminValue;
    $('#registerBtn').prop('disabled', true);
    $('#isAdmin').change(() => {
        isAdminValue = $('#isAdmin').val();
        if (isAdminValue !== '') {
            $('#registerBtn').prop('disabled', false);
        }
        else {
            $('#registerBtn').prop('disabled', true);
        }
    })
</script>
}